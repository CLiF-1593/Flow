QWidget {border: 0px solid transparent; background-color: #282828;}
QLabel {background: transparent;color: #FFFFFF;}
QMenuBar {background: qlineargradient(spread:pad, x1:0, y1:0, x2:1, y2:0, stop:0 rgb(243, 98, 101), stop:1 rgb(255, 10, 84)); color: #FFFFFF;}
QMenuBar::item {background: transparent;}

QStatusBar {background: transparent; color: #FFFFFF;}
QPlainTextEdit {border: none; background-color: #1A1A1A; border-radius: 9px; color: #FFFFFF;}
QLineEdit {border-radius: 8px;border: 1px solid #e0e4e7;padding: 5px 15px;color: #FFFFFF;}

QComboBox {border: none; background-color: #1A1A1A; border-radius: 4px; color: #FFFFFF;}
QComboBox QListView {border: none; background-color: #1A1A1A; color: #FFFFFF;}

QPushButton {border: none; background-color: #5b529d; color: #FFFFFF; border-radius: 4px;}
QPushButton::pressed {border: none; background-color: #1A1A1A; color: #FFFFFF;}
QPushButton:disabled {border: none; background-color: #1A1A1A; color: #FFFFFF;}
QPushButton:flat {border: none;}

QScrollArea {background-color: #1A1A1A; border-radius: 4px;}


QListView {show-decoration-selected: 1;background: #303030;color: #FFFFFF;}
QListView::item:alternate {background: #FFFFFF;}
QListView::item:selected {border: 1px solid #5b529d;}
QListView::item:selected:!active {background: #6a62a6;}
QListView::item:selected:active {background: #5b529d;}
QListView::item:hover {background: #5b529d;}

QScrollBar{background : #3d3d3d;}
QScrollBar::handle{background : #5b529d;}
QScrollBar::handle::pressed{background : #5b5277;}

QInputDialog {color: #FFFFFF;}